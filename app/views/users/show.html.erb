<% if @user %>
  <% @user.posts.each do |post| %>
    <div class="post">
      <div class="post-header">
        <div class="avatar">
        <%= image_tag((User.find_by(id: post.user_id)).avatar) %>
        </div>
        <div class="username">
        <%= (User.find_by(id: post.user_id)).username %>
        </div>
        <%# TO DO post actions %>
      </div>
      <div class="post-image">
        <% if post.image %>
        <%= link_to image_tag(post.image), post_path(post) %>
        <% end %>
      </div>
      <div class="post-actions"></div>
      <div class="post-likes"></div>
      <div class="post-desc">
        <%= (User.find_by(id: post.user_id)).username %>
        <div class="thin"><%= post.desc %></div>
      </div>
      <div class="post-comments">
        <% if post.comments %>
        <%= post.comments.last %><br>
        <% end %>
      </div>
      <div class="post-comment"></div>
    </div>
  <% end %>
<% else %>
  <p>This user does not exist</p>
<% end %>